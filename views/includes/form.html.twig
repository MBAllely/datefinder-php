{% if form %}
  <form action='/result'>
    <div class="form-group">
      <label for='day'>Enter the day:</label>
      <input name='day' id='day' type='number' class='form-control' placeholder='5'>
    </div>
    <div class="form-group">
      <label for='month'>Enter a month:</label>
      <input name='month' id='month' type='number' class='form-control' placeholder='2'>
    </div>
    <div class="form-group">
      <label for='year'>Enter a year:</label>
      <input name='year' id='year' type='year' class='form-control' placeholder='2016'>
    </div>
    <button type='submit' class='btn btn-success'>Submit</button>
  </form>
{% endif %}
